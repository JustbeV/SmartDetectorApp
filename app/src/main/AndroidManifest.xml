        <!-- Fire Monitor Foreground Service -->
<!--        Sticky notification that cannot be removed so that the system will continuously work-->
        <service
            android:name=".FireMonitorService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            />


    </application>
</manifest>
